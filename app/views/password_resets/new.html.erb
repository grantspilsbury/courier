<% provide(:title, 'Password reset') %>
<section id="inner-headline">
    <div class="container">
                <div class="row">
            <div class="span12">
                <div class="inner-heading">
                    <h2>Forgot your password?</h2>
            </div>
        </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
            <div class="span12">
                <%= form_tag password_resets_path, :method => :post do %>
                    <div class="span6 field">
                        <%= label_tag :email %>
                        <%= text_field_tag :email, params[:email] %>
                        <p>
                            <%= submit_tag "Reset Password", class: "btn btn-fake margintop10 pull-left" %>
                        </p>
                    </div>
                <% end %>
            </div>
    </div>
</section>
