<% provide(:title, 'New password') %>
<section id="inner-headline">
    <div class="container">
                <div class="row">
            <div class="span12">
                <div class="inner-heading">
                    <h2>New password</h2>
            </div>
        </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="container">
            <div class="span12">
                <%= form_for  @user , :url => password_reset_path(params[:id]) do |f| %>
                    <div class="span6 field">
                        <%= f.label :password %>
                        <%= f.password_field :password %>
                        <%= f.label :password_confirmation %>
                        <%= f.password_field :password_confirmation %>
                        <p>
                            <%= f.submit "Update Password", class: "btn btn-fake margintop10 pull-left" %>
                        </p>
                    </div>
                <% end %>
            </div>
    </div>
</section>