@font-face {
    font-family: 'ostrich_sansmedium';
    src: url(<%= asset_path 'ostrich-regular-webfont.eot' %>);
    src: url(<%= asset_path 'ostrich-regular-webfont.eot?#iefix' %>) format('embedded-opentype'),
         url(<%= asset_path 'ostrich-regular-webfont.woff' %>) format('woff'),
         url(<%= asset_path 'ostrich-regular-webfont.ttf' %>) format('truetype'),
         url(<%= asset_path 'ostrich-regular-webfont.svg#ostrich_sansmedium' %>) format('svg');
    font-weight: normal;
    font-style: normal;
}

body {
    color: #353535;
}

.btn-fake, .btn-home {
    background: none repeat scroll 0 0 #0088CC;
    color: #fff;
}

.btn-fake:hover, .btn-fake:active,
.btn-home:hover, .btn-home:active {
    background: #0C3650;
     color: #fff;
    }

    .home .row {
        margin-bottom: 0px;
        margin-top: 10px;
    }

    h4.home-form-header {
        padding: 0;
        margin: 0;
    }

    #delivery_special_instructions {
        width: 90%;
    }

    #delivery_quote {
        width: 60px;
        margin: 0;
        font-size: 1.6em;
        height: 35px;
        border: none;
        box-shadow: none;
        display: inline;
        color: #0C3650;
        background-color: #fff;
    }

    footer {
        margin: 50px 0 0;
    }

.addresses {
    background-color: #0C3650;
    color: #fff;
    padding: 10px;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
    overflow: hidden;
}

.home ul {
    list-style: none;
}

.addresses a.options {
    font-size: 0.8em;
    color: #0088CC;
    padding-right: 10px;
}

.addresses a {
    color: #fff;
}

.addresses li {
    line-height: 1.1em;
    margin-bottom: 1em;
}

select {
    color: #353535;
}

.terms-link {
    margin-right: 10px;
}

#delivery_from_address,
#delivery_to_address {
    width: 95%;
}

.signin-form label {
    color: #fff;
}

a.signup {
    color: #0088CC;
}

#signup-container {
    display: none;
}

.btn-fake, .btn-home {
    margin-bottom: 20px;
    font-size: 1.5em;
    padding: 10px;
}

.table-striped tbody > tr:nth-child(odd) > td,
.table-striped tbody > tr:nth-child(odd) > th {
    background-color: #D9EDF7;
}

.logo {
    font-family: 'ostrich_sansmedium', Helvetica, Arial, sans-serif;
    font-size: 80px;
    margin-right: 20px;
    padding: 10px 0 20px 0;
    display: inline-block; 
    line-height: 50px;
}

#logo {
    text-decoration: none;
    color: #0C3650;
    text-shadow: 1px 1px 1px #0088CC;
}

.slogan {
    font-size: 14px;
}

.inner-heading {
    font-size: 1.3em;
    font-weight: 600;
    margin: 10px;
}

header {
    margin: 10px 0 0;
}

#error_explanation li {
    color: #B94A48;
}

.delivery-panel {
    border: dashed 1px #0C3650;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
}

.headnav ul li a.login-links {
    color: #0C3650;
}
